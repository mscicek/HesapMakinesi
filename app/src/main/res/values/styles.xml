<resources>
    <!-- Varsayılan App Teması -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#1C1C1C</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#2E7D32</item>
    </style>

    <!-- Buton Stilleri -->
    <style name="CalcNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CalcOperator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#2E7D32</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CalcFunction">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#757575</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="CalcEquals">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">#00C853</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
