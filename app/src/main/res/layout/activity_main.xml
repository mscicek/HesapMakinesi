<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1C"
    android:padding="16dp">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:padding="16dp"
        android:background="#000000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginTop="16dp">

        <!-- First Row -->
        <Button android:id="@+id/btnC" android:text="C" style="@style/CalcFunction"/>
        <Button android:id="@+id/btnNegate" android:text="+/-" style="@style/CalcFunction"/>
        <Button android:id="@+id/btnPercent" android:text="%" style="@style/CalcFunction"/>
        <Button android:id="@+id/btnDivide" android:text="รท" style="@style/CalcOperator"/>

        <!-- Second Row -->
        <Button android:id="@+id/btn7" android:text="7" style="@style/CalcNumber"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/CalcNumber"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/CalcNumber"/>
        <Button android:id="@+id/btnMultiply" android:text="ร" style="@style/CalcOperator"/>

        <!-- Third Row -->
        <Button android:id="@+id/btn4" android:text="4" style="@style/CalcNumber"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/CalcNumber"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/CalcNumber"/>
        <Button android:id="@+id/btnMinus" android:text="-" style="@style/CalcOperator"/>

        <!-- Fourth Row -->
        <Button android:id="@+id/btn1" android:text="1" style="@style/CalcNumber"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/CalcNumber"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/CalcNumber"/>
        <Button android:id="@+id/btnPlus" android:text="+" style="@style/CalcOperator"/>

        <!-- Fifth Row -->
        <Button android:id="@+id/btn0" android:text="0"
            style="@style/CalcNumber"
            android:layout_columnSpan="2"/>

        <Button android:id="@+id/btnDot" android:text="." style="@style/CalcNumber"/>
        <Button android:id="@+id/btnEquals" android:text="=" style="@style/CalcEquals"/>
    </GridLayout>
</LinearLayout>
